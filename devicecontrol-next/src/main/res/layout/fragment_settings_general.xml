<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Debugging -->
    <alexander.martinz.libs.materialpreferences.MaterialPreferenceCategory
        android:id="@+id/cat_debug"
        style="@style/MaterialPreferences.Default"
        app:prefTitle="@string/debugging">

        <org.namelessrom.devicecontrol.preferences.AutoSwitchPreference
            android:id="@+id/pref_debug_logging"
            style="@style/MaterialPreferences.Default"
            app:prefKey="@string/pref_enable_logger"
            app:prefSummary="@string/logging_summary"
            app:prefTitle="@string/logging" />

        <org.namelessrom.devicecontrol.preferences.AutoSwitchPreference
            android:id="@+id/pref_debug_always_launch_setup"
            style="@style/MaterialPreferences.Default"
            app:prefKey="@string/pref_debug_always_launch_setup"
            app:prefTitle="@string/always_launch_setup" />

    </alexander.martinz.libs.materialpreferences.MaterialPreferenceCategory>

</LinearLayout>
