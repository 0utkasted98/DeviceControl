<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize stuff here -->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorControlHighlight">@color/primary</item>
    </style>

    <style name="AppTheme.Translucent" parent="AppTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.CardView.Dark" parent="CardView.Dark">
        <item name="cardBackgroundColor">@color/grey_800</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">8dp</item>
    </style>

    <style name="MaterialPreferences.Default">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="prefCardBackgroundColor">@color/grey_800</item>
    </style>

</resources>
